{
  "name": "@asamuzakjp/css-color",
  "description": "CSS color - Resolve and convert CSS colors.",
  "author": "asamuzaK",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asamuzaK/cssColor.git"
  },
  "homepage": "https://github.com/asamuzaK/cssColor#readme",
  "bugs": {
    "url": "https://github.com/asamuzaK/cssColor/issues"
  },
  "files": [
    "dist",
    "src"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "default": "./dist/esm/index.js"
    },
    "./package.json": "./package.json"
  },
  "dependencies": {
    "@csstools/css-calc": "^3.1.1",
    "@csstools/css-color-parser": "^4.0.2",
    "@csstools/css-parser-algorithms": "^4.0.0",
    "@csstools/css-tokenizer": "^4.0.0",
    "lru-cache": "^11.2.6"
  },
  "devDependencies": {
    "@tanstack/vite-config": "^0.4.3",
    "@vitest/coverage-istanbul": "^4.0.18",
    "esbuild": "^0.27.3",
    "eslint": "^9.39.3",
    "eslint-plugin-regexp": "^3.0.0",
    "globals": "^17.3.0",
    "knip": "^5.85.0",
    "neostandard": "^0.12.2",
    "prettier": "^3.8.1",
    "publint": "^0.3.17",
    "rimraf": "^6.1.3",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.30.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "oxc-resolver",
      "unrs-resolver"
