{
  "name": "@asamuzakjp/css-color",
  "description": "CSS color - Resolve and convert CSS colors.",
  "author": "asamuzaK",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asamuzaK/cssColor.git"
  },
  "homepage": "https://github.com/asamuzaK/cssColor#readme",
  "bugs": {
    "url": "https://github.com/asamuzaK/cssColor/issues"
  },
  "files": [
    "dist",
    "src",
    "types"
  ],
  "type": "module",
  "exports": {
    "import": {
      "types": "./types/index.d.ts",
      "default": "./src/index.js"
    },
    "require": {
      "types": "./dist/cjs/css-color.d.cts",
      "default": "./dist/cjs/css-color.cjs"
    },
    "default": {
      "types": "./dist/cjs/css-color.d.cts",
      "default": "./dist/cjs/css-color.cjs"
    }
  },
  "types": "types/index.d.ts",
  "dependencies": {
    "@csstools/css-calc": "^2.1.1",
    "@csstools/css-color-parser": "^3.0.7",
    "@csstools/css-parser-algorithms": "^3.0.4",
    "@csstools/css-tokenizer": "^3.0.3",
    "lru-cache": "^10.4.3"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "esbuild": "^0.24.2",
    "eslint": "^9.17.0",
    "eslint-plugin-import-x": "^4.6.1",
    "eslint-plugin-jsdoc": "^50.6.1",
    "eslint-plugin-regexp": "^2.7.0",
    "globals": "^15.14.0",
    "mocha": "^11.0.1",
    "neostandard": "^0.12.0",
    "npm-run-all2": "^7.0.2",
    "sinon": "^19.0.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "scripts": {
    "build": "npm run tsc && npm run lint && npm test && npm run bundle",
    "bundle": "npm-run-all -s bundle-*",
    "bundle-browser": "esbuild --format=esm --platform=browser --outfile=dist/esm/css-color.min.js --bundle --minify --sourcemap src/index.js",
    "bundle-cjs": "tsup --entry.css-color src/index.js --format=cjs --platform=node --outDir=dist/cjs/ --minify --sourcemap --dts",
    "lint": "eslint --fix .",
    "test": "c8 --reporter=text mocha --exit test/**/*.test.js",
    "tsc": "node -e \"fs.rmSync('types',{recursive:true,force:true})\" && npx tsc"
  },
  "version": "2.8.2"
}
