    "prettier": "prettier . --ignore-unknown --write",
    "publint": "publint --strict",
    "test": "pnpm run prettier && pnpm run --stream \"/^test:.*/\"",
    "test:eslint": "eslint ./src ./test --fix",
    "test:types": "tsc",
    "test:unit": "vitest"
  },
  "engines": {
    "node": "^20.19.0 || ^22.12.0 || >=24.0.0"
  },
  "version": "5.0.1"
